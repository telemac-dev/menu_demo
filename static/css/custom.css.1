/* static/css/custom.css */

/* Variáveis para a Sidebar */
:root {
    --sidebar-width: 280px;
    --sidebar-width-collapsed: 80px;
    /* Paleta de Cores Moderna (Tons de Azul) - Adaptada */
    --primary-blue: #007bff;
    --dark-blue: #213B5C;
    --light-blue: #5A84C1;
    --text-light: #f8f9fa;
    --text-dark: #343a40;
    --accent-color: #00BFFF;
    --bg-light: #f4f7f6;
}

body {
    overflow-x: hidden;
    background-color: var(--bg-light);
}

/* Estrutura principal do layout */
.d-flex {
    min-height: 100vh;
    width: 100%;
}

/* Estilização da Sidebar */
.sidebar {
    width: var(--sidebar-width);
    height: 100vh;
    background: linear-gradient(135deg, #1a1c2e 0%, #16181f 100%); /* Gradiente escuro */
    transition: all 0.3s ease;
    flex-shrink: 0; /* Impede que a sidebar encolha */
    box-shadow: 2px 0 5px rgba(0,0,0,0.2); /* Sombra sutil */
    /* Em desktop, a sidebar é um item flex normal */
}

/* Estado colapsado da Sidebar */
.sidebar.collapsed {
    width: var(--sidebar-width-collapsed);
}

/* Estilização dos links da Sidebar */
.sidebar-link {
    color: #a0a3bd; /* Cor de texto padrão */
    transition: all 0.2s ease;
    border-radius: 8px;
    margin: 4px 16px;
    white-space: nowrap;
    overflow: hidden;
    display: flex; /* Para alinhar ícone e texto */
    align-items: center;
}
.sidebar-link:hover {
    color: #ffffff;
    background: rgba(177, 24, 24, 0.1);
    transform: translateX(5px); /* Efeito de deslize no hover */
}
.sidebar-link.active {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
}
.sidebar-link i {
    margin-right: 1rem; /* Espaçamento entre ícone e texto */
}

/* Estilização do cabeçalho da Sidebar */
.sidebar .p-4 {
    padding: 1.25rem 1.5rem !important; /* Ajusta padding para o cabeçalho */
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex; /* Para alinhar título e botão */
    justify-content: space-between;
    align-items: center;
}

/* Estilização do texto do logo */
.logo-text {
    background: linear-gradient(45deg, #6b8cff, #8b9fff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: opacity 0.3s ease;
}

/* Esconde elementos quando a sidebar está colapsada */
.sidebar.collapsed .hide-on-collapse {
    opacity: 0;
    visibility: hidden;
    width: 0; /* Ajuda a esconder o texto */
    transition: opacity 0.2s ease, visibility 0.2s ease, width 0.2s ease;
}
.sidebar.collapsed .logo-text {
    opacity: 0;
}
.sidebar.collapsed .profile-info {
    opacity: 0;
}

/* Ajustes para links colapsados */
.sidebar.collapsed .sidebar-link {
    text-align: center;
    padding: 1rem !important;
    margin: 4px 8px;
    justify-content: center; /* Centraliza o ícone */
}
.sidebar.collapsed .sidebar-link i {
    margin: 0 !important; /* Remove margem do ícone */
}

/* Estilização do botão de toggle da Sidebar */
.toggle-btn {
    position: absolute;
    right: -15px; /* Posiciona o botão fora da sidebar */
    top: 20px;
    background: white;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    border: none;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    z-index: 100;
    cursor: pointer;
    transition: transform 0.3s ease;
    display: flex; /* Para centralizar o ícone */
    justify-content: center;
    align-items: center;
    color: var(--dark-blue); /* Cor do ícone */
}
.sidebar.collapsed .toggle-btn {
    transform: rotate(180deg); /* Gira o ícone quando colapsado */
}

/* Estilização do Conteúdo Principal */
.main-content {
    flex-grow: 1; /* Ocupa o restante do espaço */
    background-color: var(--bg-light);
    min-height: 100vh;
    padding: 0; /* O padding será no container-fluid interno */
    transition: margin-left 0.3s ease; /* Transição suave para o deslocamento */
    /* margin-left será definido nas media queries */
}

/* Ajusta a margem do conteúdo quando a sidebar está colapsada */
/* Este seletor funciona porque .main-content é um irmão de .sidebar */
.sidebar.collapsed ~ .main-content {
    margin-left: var(--sidebar-width-collapsed);
}

/* Estilização da Navbar (mantida do projeto anterior, mas adaptada) */
.navbar {
    background-color: var(--dark-blue);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    z-index: 1031;
}
.navbar-brand {
    color: var(--text-light) !important;
    font-weight: bold;
}
.navbar-toggler {
    border-color: rgba(255, 255, 255, 0.1);
}
.navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.75%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
}
.navbar .dropdown-menu {
    background-color: var(--dark-blue);
    border: 1px solid rgba(255, 255, 255, 0.1);
}
.navbar .dropdown-item {
    color: var(--text-light);
}
.navbar .dropdown-item:hover {
    background-color: var(--light-blue);
}
.navbar .dropdown-divider {
    border-top-color: rgba(255, 255, 255, 0.1);
}
.navbar .rounded-circle {
    border: 1px solid rgba(255, 255, 255, 0.5);
}

/* Estilos para submenus */
.submenu {
    margin-left: 20px; /* Indentação para submenus */
    background-color: rgba(0,0,0,0.1);
}
.sidebar.collapsed .submenu {
    margin-left: 0; /* Remove indentação quando colapsado */
}
.sidebar.collapsed .submenu .sidebar-link {
    padding: 0.75rem !important; /* Ajusta padding para links de submenu colapsados */
}

/* Estilos para formulários Django */
input[type="text"],
input[type="email"],
input[type="password"],
textarea,
select {
    width: 100%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    appearance: none;
    border-radius: 0.25rem;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus,
textarea:focus,
select:focus {
    color: #212529;
    background-color: #fff;
    border-color: #86b7fe;
    outline: 0;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

/* Acessibilidade: Estados de Foco */
.sidebar-link:focus, .dropdown-item:focus, .toggle-btn:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
}

/* --- Media Queries para Responsividade --- */

/* Desktop e Telas Maiores (>= 768px) */
@media (min-width: 768px) {
    .sidebar {
        margin-left: 0; /* Sidebar visível por padrão */
        position: relative; /* Volta a ser um item flex normal */
    }
    .main-content {
        margin-left: var(--sidebar-width); /* Conteúdo empurrado pela sidebar */
    }
    .sidebar.collapsed {
        margin-left: 0; /* Não muda a margem da sidebar, apenas sua largura */
    }
    .sidebar.collapsed ~ .main-content {
        margin-left: var(--sidebar-width-collapsed); /* Conteúdo se ajusta à sidebar colapsada */
    }
}

/* Mobile e Telas Menores (< 768px) */
@media (max-width: 767.98px) {
    .sidebar {
        position: fixed; /* Sidebar fixa para sobrepor o conteúdo */
        margin-left: calc(-1 * var(--sidebar-width)); /* Esconde a sidebar por padrão */
        z-index: 1030; /* Garante que sobreponha */
    }
    .sidebar.collapsed { /* Em mobile, 'collapsed' significa que ela está ABERTA */
        margin-left: 0; /* Mostra a sidebar */
        width: var(--sidebar-width); /* Ocupa a largura total (não colapsa a largura) */
    }
    .main-content {
        margin-left: 0; /* Conteúdo não é empurrado em mobile */
        width: 100%; /* Ocupa a largura total */
    }
    .sidebar.collapsed ~ .main-content { /* Não se aplica em mobile, pois sidebar é fixed */
        margin-left: 0;
    }
    /* Ajustes para o botão de toggle em mobile */
    .toggle-btn {
        right: 15px; /* Ajusta posição do botão de toggle em mobile */
        top: 15px;
        transform: rotate(180deg); /* Gira o ícone para indicar que fecha */
    }
    .sidebar.collapsed .toggle-btn { /* Quando sidebar está "aberta" em mobile */
        transform: rotate(0deg); /* Volta o ícone para indicar que abre */
    }
    .sidebar .p-4 {
        justify-content: space-between; /* Alinha título e botão de toggle */
    }
}
